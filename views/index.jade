doctype 5
html(lang="en")
  head
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    link(rel="stylesheet", type="text/css", href="/css/badland.css")
    script(src="/js/lib/jquery.js")
    script(src="/js/lib/jquery.masonry.min.js")
    script(src="/js/lib/jquery.timers.js")
    script(src="/js/badland.js")
  body
    div#content
    - for(var i=0; i < b.length; i++) {
      div.ascii
        pre #{b[i].ascii}
        div.song
          p
            a(href="/mp3/#{b[i].file}") #{b[i].song}
          audio(controls="controls", preload="metadata")
            source(src="/mp3/#{b[i].ogg}")
            source(src="/mp3/#{b[i].file}")
        div.score
          p(id=b[i].id) 
            +#{b[i].score}

    - }
    script
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', "#{gacode}"]);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
